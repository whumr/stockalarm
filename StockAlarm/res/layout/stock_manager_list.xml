<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical" >
    
    <CheckBox
        android:id="@+id/sm_check"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:checked="false" />
    
    <View
        android:id="@+id/sm_line1"
        android:layout_width="0.5dp"
        android:layout_toRightOf="@+id/sm_check"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:visibility="visible" />

	<TextView 
        android:id="@+id/sm_code_text"
        android:layout_toRightOf="@+id/sm_line1"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left" />
    
    <View
        android:id="@+id/sm_line2"
        android:layout_width="0.5dp"
        android:layout_toRightOf="@+id/sm_code_text"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:visibility="visible" />
	
    <TextView
        android:id="@+id/sm_name_text"
        android:layout_toRightOf="@+id/sm_line2"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left" />
        
	<View
        android:id="@+id/sm_line3"
        android:layout_width="0.5dp"
        android:layout_toRightOf="@+id/sm_name_text"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:visibility="visible" />

    <Button 
        android:id="@+id/sm_delete_button"
        android:layout_toRightOf="@+id/sm_line3"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:textSize="12sp"
        android:text="@string/button_delete"/>
    
</RelativeLayout>
